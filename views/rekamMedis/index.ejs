<%- include('../partials/header') %>

<div style="background-image: url('/images/bgklinik.jpg'); background-size: cover; background-position: center;" class="min-h-screen py-12">
  <div class="max-w-5xl mx-auto bg-white bg-opacity-90 p-6 rounded-lg shadow-md">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold">Data Rekam Medis</h1>
      
      <% if (user) { %>
        <a href="/rekamMedis/create" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
          + Tambah Rekam Medis
        </a>
      <% } %>
    </div>

    <div class="overflow-x-auto bg-white shadow rounded-lg">
      <table class="min-w-full table-auto text-sm text-left">
        <thead class="bg-green-600 text-white">
          <tr>
            <th class="px-6 py-3 font-semibold">No</th>
            <th class="px-6 py-3 font-semibold">Pasien</th>
            <th class="px-6 py-3 font-semibold">Dokter</th>
            <th class="px-6 py-3 font-semibold">Diagnosa</th>
            <th class="px-6 py-3 font-semibold">Tindakan</th>
            <% if (user) { %>
              <th class="px-6 py-3 font-semibold text-center">Aksi</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% rekamMedis.forEach((r, index) => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-6 py-3"><%= index + 1 %></td>
              <td class="px-6 py-3"><%= r.nama_pasien %></td>
              <td class="px-6 py-3"><%= r.nama_dokter %></td>
              <td class="px-6 py-3"><%= r.diagnosa %></td>
              <td class="px-6 py-3"><%= r.tindakan %></td>
              
              <% if (user) { %>
                <td class="px-6 py-3 text-center space-x-2">
                  <a href="/rekamMedis/<%= r.id_rekam %>/edit" class="text-blue-600 hover:underline">Edit</a>
                  <a href="/rekamMedis/<%= r.id_rekam %>/delete" class="text-red-600 hover:underline" onclick="return confirm('Yakin ingin menghapus data ini?')">Hapus</a>
                </td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
