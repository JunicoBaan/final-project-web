<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4 py-12">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-lg">
    <h2 class="text-2xl font-bold text-blue-600 mb-6">Edit Dokter</h2>

    <form action="/dokter/<%= dokter.id_dokter %>/edit" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-semibold">Nama:</label>
        <input type="text" name="nama" value="<%= dokter.nama %>" class="w-full border px-4 py-2 rounded" required>
      </div>

      <div>
        <label class="block mb-1 font-semibold">Spesialisasi:</label>
        <input type="text" name="spesialisasi" value="<%= dokter.spesialisasi %>" class="w-full border px-4 py-2 rounded" required>
      </div>

      <div>
        <label class="block mb-1 font-semibold">No Telepon:</label>
        <input type="text" name="no_telepon" value="<%= dokter.no_telepon %>" class="w-full border px-4 py-2 rounded" required>
      </div>

      <div class="flex justify-end gap-2">
        <a href="/dokter" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">Batal</a>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Update</button>
      </div>
    </form>
  </div>
</div>

