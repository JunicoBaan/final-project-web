<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4 py-12">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-lg">
    <h2 class="text-2xl font-bold text-blue-600 mb-6">Tambah Dokter</h2>

    <form action="/dokter/create" method="POST" class="space-y-4">
      <input type="text" name="nama" placeholder="Nama Dokter" class="w-full border px-4 py-2 rounded" required>
      <input type="text" name="spesialisasi" placeholder="Spesialisasi" class="w-full border px-4 py-2 rounded" required>
      <input type="text" name="no_telepon" placeholder="No Telepon" class="w-full border px-4 py-2 rounded" required>

      <div class="flex justify-end space-x-2">
        <a href="/dokter" class="bg-gray-300 px-4 py-2 rounded hover:bg-gray-400">Batal</a>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Simpan</button>
      </div>
    </form>
  </div>
</div>


